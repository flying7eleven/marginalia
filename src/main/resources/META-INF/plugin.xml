<idea-plugin>
    <id>com.marginalia</id>
    <name>Marginalia</name>
    <vendor>Marginalia</vendor>

    <description><![CDATA[
    AI-assisted project scaffolding for JetBrains IDEs.
    Marginalia guides you through an interactive interview to generate
    a tailored project structure with spec files and configuration.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <newProjectWizard.generator
                implementation="com.marginalia.wizard.MarginaliaProjectWizard"/>

        <applicationService
                serviceImplementation="com.marginalia.settings.MarginaliaSettings"/>

        <applicationConfigurable
                parentId="tools"
                displayName="Marginalia"
                instance="com.marginalia.settings.MarginaliaSettingsConfigurable"/>

        <notificationGroup id="Marginalia"
                           displayType="BALLOON"/>
    </extensions>

    <actions>
        <group id="com.marginalia.actions" text="Marginalia" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="com.marginalia.actions.StartInterview"
                    class="com.marginalia.actions.StartInterviewAction"
                    text="Start Interview"
                    description="Launch the AI interview to generate a product description"/>
        </group>
    </actions>
</idea-plugin>
